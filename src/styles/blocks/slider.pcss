.slider__header {
  margin-bottom: 95px;
  display: flex;
  justify-content: space-between;
  padding-right: 25%;
}

.slider__content {
  display: flex;
}

.slider__item {
  width: 50%;
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}

.slider__btn {
  margin-right: 10px;

  &:last-child {
    margin-right: 0;
  }
}

